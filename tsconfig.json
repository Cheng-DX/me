{
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "isolatedModules": true,
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "lib": [
      "ESNext",
      "dom",
    ],
    "skipLibCheck": true,
  },
  "include": [
    "vite.config.*",
    "*.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "vitest.config.*",
  ]
}